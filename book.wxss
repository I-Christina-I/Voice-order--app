.book-container {
  width: 100%;
  height: 100%;
  overflow: hidden; /* 如果图片过大，隐藏超出部分 */
}

.buttons-container {
  display: flex;          /* 使用Flexbox布局 */
  justify-content: center; /* 使按钮组在水平方向居中 */
  align-items: center;     /* 垂直方向居中对齐 */
  margin-top: 70px;       /* 按钮组与上方内容的距离 */
}

.book-image {
  width: 100%;               /* 设置图片宽度为100% */
  height: 100%;              /* 设置图片高度为100% */
  object-fit: contain;       /* 保持长宽比，图片完全显示在容器内 */
}

.controls button.auto-play-btn {
  background-color: #4CAF50; /* 自动播放按钮的特殊颜色 */
  color: white;
}

