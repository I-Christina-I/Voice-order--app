/* packageA/suggest/suggest.wxss *//* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f4f4f4;
  padding: 20px;
}

/* 头像样式 */
.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 20px;
}

/* 对话气泡框样式 */
.dialog-box {
  max-width: 80%;
  padding: 15px;
  border-radius: 15px;
  background-color: #fff;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
}

/* 退出按钮样式 */
.exit-button {
  width: 100px;
  height: 40px;
  background-color: #ff4d4f;
  color: #fff;
  border: none;
  border-radius: 5px;
}
