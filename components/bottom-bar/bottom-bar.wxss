
.bottom-bar {
  height: 40px; /* 底部栏高度 */
  background-color: #FFE9FF; /* 根据需要设置背景颜色 */
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000; /* 确保在页面上方显示 */
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.bottom-bar-icon {
  width: 60px;
  height:60px;
}

