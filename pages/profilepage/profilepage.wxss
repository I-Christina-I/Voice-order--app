/* pages/profilepage/profilepage.wxss */
/* 页面整体样式 */
.background-image{
  position: fixed; /* 或absolute，取决于需求 */
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1; /* 确保背景图位于内容下方 */
}

/* 用户信息容器样式 */
.profile-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
  border: 1px solid #e0e0e0;
  border-radius: 10px;
  margin: 20px;
  background-color: rgba(240, 215, 243, 0.9);
}

/* 用户头像样式 */
.avatar {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  margin-bottom: 20px;
  border-style: solid;
  border-width: 5px;
  border-color: rgb(223, 231, 231);
}

/* 用户信息样式 */
.user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-id {
  margin-right: 10px;
  font-weight: bold;
  color:rgb(30, 24, 59)
}

.gender-icon{
  height:25px;
  width:20px;
  margin-left:20px;
  margin-right:30px;
}
/* 按钮容器样式 */
.buttons-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: -20px;
}

.profile-button {
  background-color: rgb(246, 246, 246);
  width: 100%;
  margin: 8px 0;
  border-radius: 10px; /* 软矩形边角 */
  color:rgb(177, 73, 146);
}
