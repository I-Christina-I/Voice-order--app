/* pages/mainpage/mainpage.wxss */
/* 设置页面容器为flex布局 */
page {
  display: flex;
  flex-direction: column;
  height: 95%;
}
.container {
  flex:1;
  overflow-y: scroll; /* 使页面内容可滚动 */
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.books-container {
  position: absolute;
  top: 18%;
  left: 10%;
  width: 80%;
  height: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.book-item {
  position: relative;
  width: 60%;
  margin-bottom: -30px;
  transition: transform 0.3s;
}

.book-cover {
  margin-left: -50px;
  margin-bottom: 5px;
  width: 140%;
  height: 100px;
  border-radius: 5px;
  border-width: 200%;
  border-style: solid;
  border-top-color: rgb(245, 243, 221);
  border-top-width: 5px;
  border-right-color: rgb(245, 243, 221);
  border-right-width: 5px;
}

.book-item:hover {
  transform: translateY(-20px);
}
