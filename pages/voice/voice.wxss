/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.bubbleBox {
  display: flex;
  align-items: flex-start;
  width: 100%;
  margin-bottom: 20rpx;
}

.avatar-section {
  text-align: center;
  margin-right: 10rpx;
}

.avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.nickname {
  padding-top: 10rpx;
  font-size: 24rpx;
  width: 100rpx;
}

.triangle-top-left {
  position: relative;
  border-top: 15rpx solid #06A56F;
  border-left: 15rpx solid transparent;
  margin-top: 20rpx;
  margin-left: 10rpx;
}

.triangle-top-left2 {
  top: -12rpx;
  left: -4rpx;
  position: absolute;
  border-top: 15rpx solid #ffffff;
  border-left: 15rpx solid transparent;
}

.bkbubble-left {
  max-width: 70%;
  padding: 20rpx;
  margin-left: 10rpx;
  border-radius: 14rpx;
  background-color: #ffffff;
  border: 6rpx solid #06A56F;
  line-height: 36rpx;
}

.img-section {
  margin-top: 20rpx;
}

.message-image {
  width: 100%;
  height: auto;
  margin-top: 10rpx;
}

.record-button {
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #1aad19;
  color: white;
  border-radius: 5rpx;
  margin-top: 20rpx;
}

.recognition-result {
  margin-top: 20rpx;
  font-size: 16rpx;
  color: #333;
}

.row {
  display: flex;
  width: 100%;
  justify-content: space-around;
  margin-top: 20rpx;
}

.image-container {
  width: 35%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 10rpx;
}

.image {
  width: 100%;
  height: auto;
  object-fit: cover;
}

