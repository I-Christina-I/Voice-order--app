/* index.wxss */
.container {
  padding: 20px;
}

.input-section {
  margin-bottom: 20px;
}

textarea {
  width: 100%;
  height: 100px;
  margin-top: 10px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 16px;
  resize: none;
}

.generate-button {
  display: block;
  width: 100%;
  padding: 10px;
  background-color: #4CAF50;
  color: white;
  text-align: center;
  border: none;
  border-radius: 5px;
  font-size: 18px;
}

.result-section {
  margin-top: 20px;
}

.result-image {
  width: 100%;
  margin-top: 10px;
  border-radius: 5px;
}
