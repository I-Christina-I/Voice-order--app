.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.background {
  position: relative;
  width: 100%;
  height: 50vh;
  margin-top: -100px;
  overflow: hidden; /* 确保背景图片不超出容器 */
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 确保图片填充整个容器 */
  filter: blur(3px); /* 添加模糊效果 */
}

.blur-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(93, 92, 92, 0.1); /* 适当减少透明度以提高清晰度 */
}

.content {
  background-color: white;
  width: 90%;
  padding: 20px;
  margin-top: -50px;
  border-radius: 20px;
  box-shadow: 10px 10px 50px rgba(0, 0, 0, 0.1);
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.book-title {
  font-weight: bold;
  font-size: 24px;
  margin-bottom: 10px;
}

.book-description {
  margin-bottom: 20px;
  font-size: small;
}

button {
  width: 100%;
  background-color: rgb(253, 255, 123);
  border-radius: 10px;
}

.character-selection {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2;
}

.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.character-container {
  position: relative;
  background: white;
  padding: 20px;
  border-radius: 10px;
  z-index: 3;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.character-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10px;
}

.character-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-bottom: 5px;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60px;
  background-color: #f8f8f8;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
  z-index: 10; /* 确保横栏位于顶层 */
}

.bottom-bar button {
  width: 45%;
  height: 40px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}
